<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="6"
            android:columnCount="5"
            android:background="#000"
    >

        <Button

                android:id="@+id/tvClear"
                android:text="C"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/ComplexOperatorText"
                android:background="@color/ComplexOperatorBG"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvOpen"
                android:text="("
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/SimpleOperatorText"
                android:background="@color/SimpleOperatorBG"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvClose"
                android:text=")"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/SimpleOperatorText"
                android:background="@color/SimpleOperatorBG"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvDivide"
                android:text="÷"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/ComplexOperatorText"
                android:background="@color/ComplexOperatorBG"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />


        <Button
                android:id="@+id/tvSeven"
                android:text="7"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvEight"
                android:text="8"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvNine"
                android:text="9"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvMul"
                android:text="X"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/SimpleOperatorText"
                android:background="@color/SimpleOperatorBG"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvFour"
                android:text="4"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvFive"
                android:text="5"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvSix"
                android:text="6"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvMinus"
                android:text="-"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/SimpleOperatorText"
                android:background="@color/SimpleOperatorBG"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvOne"
                android:text="1"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvTwo"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvThree"
                android:text="3"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvPlus"
                android:text="+"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/SimpleOperatorText"
                android:background="@color/SimpleOperatorBG"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />



        <Button
                android:id="@+id/tvEquals"
                android:text="="
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/ComplexOperatorText"
                android:background="@color/ComplexOperatorBG"
                android:layout_row="4"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_rowSpan="2"
        />

        <Button
                android:id="@+id/tvdot"
                android:text="."
                android:textSize="35dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvZero"
                android:text="0"
                android:textSize="30dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

        <Button
                android:id="@+id/tvBack"
                android:text="←"
                android:textSize="35dp"
                android:textColor="@color/NumberText"
                android:background="@color/NumberBG"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
        />

    </GridLayout>

</LinearLayout>